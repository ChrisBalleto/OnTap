<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-warning" style="margin-top: 10px;">
            <h3>Current Bar Games</h3>
            <table id="barGames" class="table table-condensed table-responsive panel-warning" style="margin-bottom: 15px; border:none;">
                <thead size="5" class="panel-heading panel-warning">
                    <tr size="5">
                        <th size="5">Game Name</th>
                        <th size="5">Delete?</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var game in Model.Bar.BarGames)
            {
                        <tr>
                            <td>@game.GameName</td>
                            <td>
                                <button data-game-id="@game.Id" data-bar-id="@Model.Bar.Id" class="btn btn-link js-delete">Delete</button>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="panel panel-warning" style="margin-top: 10px;">
            <h3>Current Sports Packages</h3>
            <table id="sportsPackages" class="table table-condensed table-responsive panel-warning" style="margin-bottom: 15px; border:none;">
                <thead size="5" class="panel-heading panel-warning">
                    <tr size="5">
                        <th size="5">Sports Packages</th>
                        <th size="5">Delete?</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var package in Model.Bar.SportsPackages)
            {
                        <tr>
                            <td>@package.PackageName</td>
                            <td>
                                <button data-package-id="@package.Id" data-bar-id="@Model.Bar.Id" class="btn btn-link js-delete">Delete</button>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
